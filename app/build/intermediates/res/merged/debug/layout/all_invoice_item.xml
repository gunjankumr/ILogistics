<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dip" >
    
    <LinearLayout android:id="@+id/r1"
       	android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <ImageView
	        android:id="@+id/textView1"
            android:contentDescription="@string/contentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_unchecked_32"/>
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textStyle="bold"/>
    </LinearLayout>
	
    <LinearLayout android:id="@+id/r2"
       	android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dp"
	    android:layout_below="@+id/r1">
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="30dp"
	        android:textColor="#FF8000"
	        android:textStyle="bold"/>
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#348017"
	        android:textStyle="bold"/>
    </LinearLayout>
	
    <LinearLayout android:id="@+id/r3"
       	android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dp"
	    android:layout_below="@+id/r2">
	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="30dp"
	        android:textColor="#348017"
	        android:textStyle="bold"/>
	    <ImageView
	        android:id="@+id/textCash"
            android:contentDescription="@string/contentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cash"/>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/r4"
       	android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dp"
	    android:visibility="gone"
	    android:layout_below="@+id/r3">
	    <TextView
	        android:id="@+id/textInvoicePosition"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FF0000"
	        android:textStyle="bold"/>
	    <TextView
	        android:id="@+id/textCustomerPosition"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FF0000"
	        android:textStyle="bold"/>
    </LinearLayout>
    
	<LinearLayout android:id="@+id/r5"
       	android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_below="@+id/r4">
	    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
	    <!--
	    <Button
	        android:id="@+id/btnProblem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/problem"
	        style="@style/ButtonText1"
	        android:textStyle="italic"
	        android:background="@drawable/button_pink"
	        android:layout_marginRight="10dp"
	      	android:typeface="serif"/>
	    -->
	    <Button
	        android:id="@+id/btnView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/view"
	        style="@style/ButtonText1"
	        android:textStyle="italic"
	        android:background="@drawable/button_blue"
	        android:layout_marginRight="10dp"
	      	android:typeface="serif"/>
    </LinearLayout>
    
</RelativeLayout>