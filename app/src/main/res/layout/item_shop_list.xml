<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Left part -->
            <TextView
                android:id="@+id/text_view_item_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:text="1" />

            <View
                android:layout_width="@dimen/divider_width"
                android:layout_height="match_parent"
                android:background="@color/grey_color" />

            <!-- Middle part -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin"
                    android:layout_marginEnd="@dimen/screen_margin"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/text_size_medium"
                    tools:text="IN62/3011014 - Shop location" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin"
                    android:layout_marginTop="@dimen/component_margin_4dp"
                    android:layout_marginEnd="@dimen/screen_margin"
                    android:drawableStart="@drawable/ic_green_delivery"
                    android:drawableLeft="@drawable/ic_green_delivery"
                    android:drawablePadding="@dimen/component_margin_8dp"
                    android:text="@string/start_location"
                    android:textColor="@color/light_green" />

                <TextView
                    android:id="@+id/text_view_start_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin_12"
                    android:layout_marginLeft="@dimen/screen_margin_12"
                    android:layout_marginTop="@dimen/component_margin_4dp"
                    android:layout_marginEnd="@dimen/screen_margin"
                    android:layout_marginRight="@dimen/screen_margin"
                    android:drawableStart="@drawable/ic_baseline_more_vert_22px"
                    android:drawableLeft="@drawable/ic_baseline_more_vert_22px"
                    android:drawablePadding="@dimen/component_margin_5dp"
                    android:textColor="@color/grey_color"
                    tools:text="IN62/3011014 - Shop location" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin"
                    android:layout_marginTop="@dimen/component_margin_4dp"
                    android:layout_marginEnd="@dimen/screen_margin"
                    android:drawableStart="@drawable/ic_red_delivery"
                    android:drawableLeft="@drawable/ic_red_delivery"
                    android:drawablePadding="@dimen/component_margin_8dp"
                    android:text="@string/drop_off"
                    android:textColor="@color/primary_red" />

                <TextView
                    android:id="@+id/text_view_drop_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="@dimen/component_margin_4dp"
                    android:layout_marginEnd="@dimen/screen_margin"
                    android:layout_marginRight="@dimen/screen_margin"
                    android:textColor="@color/grey_color"
                    tools:text="Drop location" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginTop="@dimen/component_margin_8dp"
                    android:background="@color/grey_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/title_height"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/screen_margin"
                        android:layout_marginLeft="@dimen/screen_margin"
                        android:layout_marginEnd="@dimen/screen_margin"
                        android:layout_marginRight="@dimen/screen_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/component_margin_8dp"
                            android:text="@string/total_distance"
                            android:textColor="@color/grey_color" />

                        <TextView
                            android:id="@+id/text_view_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/component_margin_8dp"
                            android:textColor="@color/light_green"
                            android:layout_marginBottom="@dimen/component_margin_8dp"
                            tools:text="25 km" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_width"
                        android:layout_height="match_parent"
                        android:background="@color/grey_color" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/screen_margin"
                        android:layout_marginLeft="@dimen/screen_margin"
                        android:layout_marginEnd="@dimen/screen_margin"
                        android:layout_marginRight="@dimen/screen_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/component_margin_8dp"
                            android:text="@string/arrives_before"
                            android:textColor="@color/grey_color" />

                        <TextView
                            android:id="@+id/text_view_arrival_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/component_margin_8dp"
                            android:textColor="@color/primary_red"
                            android:layout_marginBottom="@dimen/component_margin_8dp"
                            tools:text="-" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <!-- Right part -->
            <View
                android:layout_width="@dimen/divider_width"
                android:layout_height="match_parent"
                android:background="@color/grey_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:src="@drawable/ic_burger" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
